generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  name        String
  email       String
  password    String
  favBLPlayer String?
}

model BLPLayer {
  id          String    @id @default(uuid())
  name        String
  age         Int
  nickname    String
  ageComment  String?
  birthDate   DateTime
  birthPlace  String
  height      Float
  domLeg      String
  shoeSize    Float
  bloodType   String
  vision      Float
  zodiac      String
  imageUrl    String

  responses   Response[]
}

model Question {
  id          String     @id @default(uuid())
  text        String
  orderNumber Int

  responses   Response[]
}

model Response {
  id          String    @id @default(uuid())
  player      BLPLayer  @relation(fields: [playerId], references: [id])
  playerId    String

  question    Question  @relation(fields: [questionId], references: [id])
  questionId  String

  answer      String
  comment     String?

  @@unique([playerId, questionId])
}